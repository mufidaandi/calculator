  void _displayNum8() {
    setState(() {
      if (_valueDisplay == "0") {
        _valueDisplay = "8";
      } else {
        _valueDisplay += "8";
      }
      if (op != "") {
        b = _valueDisplay as double;
      } else {
        a = _valueDisplay as double;
      }
    });
  }

  void _displayNum9() {
    setState(() {
      if (_valueDisplay == "0") {
        _valueDisplay = "9";
      } else {
        _valueDisplay += "9";
      }
      if (op != "") {
        b = _valueDisplay as double;
      } else {
        a = _valueDisplay as double;
      }
    });
  }

  void _displayNumDot() {
    setState(() {
      _valueDisplay += ".";
    });
  }

  void _displayAC() {
    setState(() {
      _valueDisplay = "0";
    });
  }

  void _displayPlusMinus() {
    setState(() {
      if (_valueDisplay != "0") {
        a = _valueDisplay as double;
        a *= -1.0;
        if (a % a == 0) {
          intA = a as int;
          _valueDisplay = "$intA";
        } else {
          _valueDisplay = "$a";
        }
      }
    });
  }

  void _displayPercentage() {
    setState(() {
      if (_valueDisplay != "0") {
        a = _valueDisplay as double;
        a /= 100.0;
        _valueDisplay = "$a";
      }
    });
  }

  void _displayQuotient() {
    setState(() {
      if (op != "") {
        b = _valueDisplay as double;
        if (b != 0.0) {
          op = "/";
          ans = a / b;
          if (ans % ans == 0) {
            intAns = ans as int;
            _valueDisplay = "$intAns";
          } else {
            _valueDisplay = "$ans";
          }
        } else {
          _valueDisplay = "Not a number";
        }
      } else {
        op = "/";
        a = _valueDisplay as double;
      }
    });
  }

  void _displaySum() {
    setState(() {
      if (op != "") {
        op = "+";
        b = _valueDisplay as double;
        ans = a + b;
        if (ans % ans == 0) {
          intAns = ans as int;
          _valueDisplay = "$intAns";
        } else {
          _valueDisplay = "$ans";
        }
      } else {
        op = "+";
        a = _valueDisplay as double;
      }
    });
  }

  void _displayProduct() {
    setState(() {
      if (op != "") {
        op = "*";
        b = _valueDisplay as double;
        ans = a * b;
        if (ans % ans == 0) {
          intAns = ans as int;
          _valueDisplay = "$intAns";
        } else {
          _valueDisplay = "$ans";
        }
      } else {
        op = "*";
        a = _valueDisplay as double;
      }
    });
  }

  void _displayDifference() {
    setState(() {
      if (op != "") {
        op = "-";
        b = _valueDisplay as double;
        ans = a - b;
        if (ans % ans == 0) {
          intAns = ans as int;
          _valueDisplay = "$intAns";
        } else {
          _valueDisplay = "$ans";
        }
      } else {
        op = "-";
        a = _valueDisplay as double;
      }
    });
  }

  void _displayAnswer() {
    setState(() {
      if (op == "+") {
        ans = a + b;
        if (ans % ans == 0) {
          intAns = ans as int;
          _valueDisplay = "$intAns";
        } else {
          _valueDisplay = "$ans";
        }
      }
      if (op == "-") {
        ans = a - b;
        if (ans % ans == 0) {
          intAns = ans as int;
          _valueDisplay = "$intAns";
        } else {
          _valueDisplay = "$ans";
        }
      }
      if (op == "*") {
        ans = a * b;
        if (ans % ans == 0) {
          intAns = ans as int;
          _valueDisplay = "$intAns";
        } else {
          _valueDisplay = "$ans";
        }
      }
      if (op == "-") {
        ans = a - b;
        if (ans % ans == 0) {
          intAns = ans as int;
          _valueDisplay = "$intAns";
        } else {
          _valueDisplay = "$ans";
        }
      }
    });
  }