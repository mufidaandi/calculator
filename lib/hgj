    Widget fifthColumnButtons = Container(
      child: Column(
        children: <Widget>[
          Row(
            children: <Widget>[
              RaisedButton(
                onPressed: _displayNum0,
                child: const Text('0'),
              ),
            ],
          ),
          Row(
            children: <Widget>[
              RaisedButton(
                onPressed: _displayNumDot,
                child: const Text('.'),
              ),
            ],
          ),
          Row(
            children: <Widget>[
              RaisedButton(
                onPressed: _displayAnswer,
                child: const Text('='),
              ),
            ],
          ),
        ],
      ),
    );


    void _displayNum0() {
    setState(() {
      if (_valueDisplay == "0") {
        _valueDisplay = "0";
      } else {
        _valueDisplay += "0";
      }
      if (op != "") {
        b = _valueDisplay as double;
      } else {
        a = _valueDisplay as double;
      }
    });
  }

  void _displayNum1() {
    setState(() {
      if (_valueDisplay == "0") {
        _valueDisplay = "1";
      } else {
        _valueDisplay += "1";
      }
      if (op != "") {
        b = _valueDisplay as double;
      } else {
        a = _valueDisplay as double;
      }
    });
  }

  void _displayNum2() {
    setState(() {
      if (_valueDisplay == "0") {
        _valueDisplay = "2";
      } else {
        _valueDisplay += "2";
      }
      if (op != "") {
        b = _valueDisplay as double;
      } else {
        a = _valueDisplay as double;
      }
    });
  }

  void _displayNum3() {
    setState(() {
      if (_valueDisplay == "0") {
        _valueDisplay = "3";
      } else {
        _valueDisplay += "3";
      }
      if (op != "") {
        b = _valueDisplay as double;
      } else {
        a = _valueDisplay as double;
      }
    });
  }

  void _displayNum4() {
    setState(() {
      if (_valueDisplay == "0") {
        _valueDisplay = "4";
      } else {
        _valueDisplay += "4";
      }
      if (op != "") {
        b = _valueDisplay as double;
      } else {
        a = _valueDisplay as double;
      }
    });
  }

  void _displayNum5() {
    setState(() {
      if (_valueDisplay == "0") {
