
                  Expanded(
                    child: firstColumnButtons,
                  ),
                  Expanded(
                    child: secondColumnButtons,
                  ),
                  Expanded(
                    child: thirdColumnButtons,
                  ),
                  Expanded(
                    child: fourthColumnButtons,
                  ),
                  Expanded(
                    child: fifthColumnButtons,
                  ),



                  Widget firstColumnButtons = Container(
      child: Column(
        children: <Widget>[
          Row(
            children: <Widget>[
              RaisedButton(
                onPressed: _displayAC,
                child: Text('AC'),
              ),
            ],
          ),
          Row(
            children: <Widget>[
              RaisedButton(
                onPressed: _displayPlusMinus,
                child: const Text('+/-'),
              ),
            ],
          ),
          Row(
            children: <Widget>[
              RaisedButton(
                onPressed: _displayPercentage,
                child: const Text('%'),
              ),
            ],
          ),
          Row(
            children: <Widget>[
              RaisedButton(
                onPressed: _displayQuotient,
                child: const Text('รท'),
              ),
            ],
          ),
        ],
      ),
    );
    Widget secondColumnButtons = Container(
      child: Column(
        children: <Widget>[
